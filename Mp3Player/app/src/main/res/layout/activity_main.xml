<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.developer.sangbarca.mp3players2609.MainActivity">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/musiclogo"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp" />

    <SeekBar
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/seekBarSong" />

    <TextView
        android:textSize="16dp"
        android:textColor="#fff"
        android:text="00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seekBarSong"
        android:layout_toLeftOf="@+id/seekBarSong"
        android:layout_toStartOf="@+id/seekBarSong"
        android:id="@+id/textViewStart" />

    <TextView
        android:layout_toRightOf="@id/seekBarSong"
        android:layout_marginRight="10dp"
        android:textSize="16dp"
        android:textColor="#fff"
        android:text="00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seekBarSong"
        android:id="@+id/textViewTotal" />

    <ImageButton
        android:scaleType="fitXY"
        android:layout_marginTop="2dp"
        android:background="@null"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/shuffle"
        android:id="@+id/imageButton5"
        android:layout_alignTop="@+id/imageButtonPrev"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2" />

    <ImageButton
        android:layout_marginTop="9dp"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/prev"
        android:id="@+id/imageButtonPrev"
        android:layout_alignTop="@+id/imageButtonPlay"
        android:layout_toLeftOf="@+id/imageButtonPlay"
        android:layout_toStartOf="@+id/imageButtonPlay"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

    <ImageButton
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/next"
        android:id="@+id/imageButtonNext"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_alignTop="@+id/imageButtonPrev"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <ImageButton
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/repeat"
        android:id="@+id/imageButton6"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/play"
        android:id="@+id/imageButtonPlay"
        android:layout_alignTop="@+id/imageButtonStop"
        android:layout_toLeftOf="@+id/imageButtonStop"
        android:layout_toStartOf="@+id/imageButtonStop" />

    <ImageButton
        android:layout_marginRight="20dp"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stop"
        android:id="@+id/imageButtonStop"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/textViewTotal"
        android:layout_toLeftOf="@+id/imageButtonNext"
        android:layout_toStartOf="@+id/imageButtonNext" />
</RelativeLayout>
